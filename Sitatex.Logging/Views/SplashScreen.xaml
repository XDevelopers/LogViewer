        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sitatex.Logging"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="SplashScreen" 
        Height="100" Width="300" WindowStartupLocation="CenterScreen">
